html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous")
        title='Motores de plantillas - PUG'

    body

        div
            h1(class="text-center text-bg-dark p-3") Nuestras computadoras

            table(class="table table-light m-auto mt-5" style="width: 70%;")
                thead
                    tr
                        th(scope="col") Computadora
                        th(scope="col") Precio
                        th(scope="col") Imagen

                tbody
                    each product in products 
                        tr
                            td= (product.title)
                            td= (product.price)
                            td 
                                img(src= product.thumbnail width="100px" alt= product.title)


            form(class="p-3" action="/" method="get")
                button(class="btn btn-dark") Volver
