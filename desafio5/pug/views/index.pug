html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous")
        title='Motores de plantillas - PUG'

    body
        div
            h1(class="text-center text-bg-dark p-3") Agregar Computadora

            form(class="m-auto mt-5" style="width: 70%;" action="/api/productos" method="POST")
                div(class="mb-3")
                    label(for="title" class="form-label") Producto:
                        input(type="text" class="form-control" id="title" name="title")

                div(class="mb-3")
                    label(for="price" class="form-label w-80") Precio:
                        input(type="number" class="form-control" id="price" name="price")

                div(class="mb-3")
                    label(for="thumbnail" class="form-label w-80") URL: 
                        input(type="text" class="form-control" id="thumbnail" name="thumbnail")

                div(class="form-group row mt-2")
                    div(class="col-md-10")
                        input(value="Cargar producto" class="btn btn-dark" type="submit")


            form(class="p-3" action="/api/productos" method="get")
                button(class="btn btn-dark") Ver productos

